<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#EFF1DD"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="8dp"
        android:background="#EFF1DD"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="3dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="راهنمای استفاده"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="3dp"
            android:text="اضافه کردن: بر روی علامت + در پایین صفحه کلیک کنید"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="3dp"
            android:text="ویرایش کردن: بر روی آیتم مورد نظر یکبار کلیک کنید"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="3dp"
            android:text="حذف کردن: آیتم مورد نظر را برای چند ثانیه نگه دارید"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="پاک کردن کامل: استفاده از دکمه - در پایین صفحه"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="#EFF1DD"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_close_info"
                android:textStyle="bold"
                android:backgroundTint="#F90000"
                android:fontFamily="@font/vazir"
                android:text="بستن"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>